@require './prism-theme-minipress.styl'

.navbar
  border-bottom 1px solid #cccccc

{$contentClass}:not(.custom)
  a
    border-bottom none
    text-decoration none

{$contentClass}:not(.custom)
  a
    color lighten($accentColor, 20%)
    text-decoration none
    border-bottom 0px dashed lighten($accentColor, 90%)
    padding-bottom 2px
    &:hover
      text-decoration none
      border-bottom 2px double lighten($accentColor, 80%)

@require './custom-blocks.styl'