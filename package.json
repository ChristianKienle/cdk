{
  "name": "cdk",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs",
    "storybook",
    "e2e",
    "examples",
    "lib/*"
  ],
  "license": "MIT",
  "scripts": {
    "storybook": "cd storybook && yarn start",
    "bootstrap": "lerna bootstrap --concurrency 1 --use-workspaces",
    "clean": "lerna clean -y",
    "docs": "cd docs && yarn dev",
    "docs:build": "cd storybook && yarn build && cd ../docs && yarn build && mkdir dist/storybook && cp -R ../storybook/dist/* dist/storybook",
    "docs:publish": "node docs/tools/publish.js",
    "test": "vue-cli-service test:unit --no-collect-coverage && lerna run test --concurrency 1",
    "test:unit": "vue-cli-service test:unit --no-collect-coverage",
    "test:unit:watch": "cross-env BASE_URL='/' vue-cli-service test:unit --no-collect-coverage --watch",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:ci": "yarn test:e2e --headless",
    "poor-ci": "yarn test && yarn lint && yarn test:e2e:ci && yarn docs:build",
    "lint": "eslint --ext .js,.vue packages examples storybook e2e",
    "postinstall": "yarn bootstrap"
  },
  "devDependencies": {
    "@vue/cli-plugin-e2e-cypress": "^4.1.2",
    "cypress": "^3.8.2",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-import": "^2.20.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "vue": "^2.6.11",
    "@vue/cli-service": "^4.1.2",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-eslint": "^4.1.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "babel-jest": "^25.1.0",
    "lerna": "^3.20.2",
    "cross-env": "^6.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-vue": "^5.1.5",
    "vue-template-compiler": "^2.6.11"
  }
}
